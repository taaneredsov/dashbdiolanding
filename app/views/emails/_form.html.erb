<div id="form">
  <%= simple_form_for(@email) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :email %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, class: 'btn btn-success' do %>
        <i class="glyphicon glyphicon-plus"></i> New Todo
      <% end %>
    </div>

  <% end %>
</div>